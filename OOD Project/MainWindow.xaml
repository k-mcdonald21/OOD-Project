<Window x:Class="OOD_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOD_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">

    <TabControl TabStripPlacement="Top">
        <TabItem Name="TeamsInfo" Header="Team Info" Width="100">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="50,20,0,0" TextWrapping="Wrap" Text="Formula 1 App" VerticalAlignment="Top" Height="28" Width="143" FontSize="20" FontWeight="Bold"/>
                <TextBlock HorizontalAlignment="Left" Margin="92,74,0,0" TextWrapping="Wrap" Text="Teams" VerticalAlignment="Top" FontWeight="Bold" Width="46" Height="22" FontSize="14"/>
                <ListBox x:Name="lbxTeams" HorizontalAlignment="Left" Height="178" Margin="92,99,0,0" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.492,0.491" SelectionChanged="lbxTeams_SelectionChanged"/>
                <TextBlock HorizontalAlignment="Left" Margin="489,74,0,0" TextWrapping="Wrap" Text="Current Drivers" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                <ListBox x:Name="lbxDrivers" HorizontalAlignment="Left" Height="54" Margin="489,99,0,0" VerticalAlignment="Top" Width="156"/>
                <TextBlock x:Name="tblkTeamInfo" HorizontalAlignment="Left" Margin="293,99,0,0" TextWrapping="Wrap" Text="Team Info" VerticalAlignment="Top" FontWeight="Bold" Height="68" Width="169"/>
            </Grid>
        </TabItem>

        <TabItem Name="Quiz" Header="Quiz" Width="100">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="315,23,0,0" TextWrapping="Wrap" Text="Test Your Knowledge" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" RenderTransformOrigin="0.492,0.399" Width="142" Height="20"/>
                <RadioButton x:Name="btnA" Content="[OPTION A]" HorizontalAlignment="Left" Margin="102,150,0,0" VerticalAlignment="Top" FontSize="14"/>
                <RadioButton x:Name="btnB" Content="[OPTION B]" HorizontalAlignment="Left" Margin="337,150,0,0" VerticalAlignment="Top" FontSize="14"/>
                <RadioButton x:Name="btnC" Content="[OPTION C]" HorizontalAlignment="Left" Margin="565,150,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="352,48,0,0" VerticalAlignment="Top" Width="75" Click="btnStart_Click"/>
                <TextBlock x:Name="tblkQuestion" HorizontalAlignment="Left" Margin="102,73,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="553"/>
                <Button Content="Submit Answer" HorizontalAlignment="Left" Margin="337,191,0,0" VerticalAlignment="Top" Width="102" Height="24"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
